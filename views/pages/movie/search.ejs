<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/head') %>
        <title>Search Results For Movie: <%- searchQuery %> - recTV</title>
    </head>
    <body>
        <header>
            <%- include('../../partials/navbar') %>
        </header>
        <main class="container">
            <br>
            <h4 class="text-center">Search Results For Movie: <%- searchQuery %></h4>

            <div class="album py-5 bg-light">
                  
                  <div class="row">
                    <% movies.data.results.forEach(function(movie) { %>
                      <div class="col-md-3">
                        
                      <div class="card mb-4 shadow-sm">
                        <a href="/movie/<%= movie.id %>">
                            <% if (movie.poster_path) { %>
                            <img class="poster" alt=""
                                src="https://www.themoviedb.org/t/p/w1280<%= movie.poster_path %>"
                            />
                            <% } else { %>
                            <img alt="" src="/img/fallback-poster.png" />
                            <% } %>
                        </a>
        
                      </div>
                    
                     
                    </div>
                    <% }); %>
                </div>
        
                  </div>
                </div>
              </div>
            </div>
        </main>
        <br>
        <footer><%- include('../../partials/footer') %></footer>
    </body>
</html>
