<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/head') %>
        <title>Search Results For TV Show: <%- searchQuery %> - recTV</title>
    </head>
    <body>
        <header>
            <header>
                <%- include('../../partials/navbar') %>        
            </header>
            
        </header>
        <main>
            <h1 style="margin-left: 20px;">Search Results For TV Show: <%- searchQuery %></h1>
            <div class="grid-row">
                <% tv.data.results.forEach(function(show) { %>
                <div class="card">
                    <a href="/tv/<%= show.id %>">
                        <% if (show.poster_path) { %>
                        <img alt=""
                            src="https://www.themoviedb.org/t/p/w1280<%= show.poster_path %>"
                        />
                        <% } else { %>
                        <img alt="" src="/img/fallback-poster.png" />
                        <% } %>
                        <p><%= show.original_name %></p>
                    </a>
                </div>
                <% }); %>
            </div>
        </main>
        <footer><%- include('../../partials/footer') %></footer>
    </body>
</html>
