<!DOCTYPE html>
<head>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>
<body>
    <header>
        <%- include('../../partials/navbar') %>
    </header>
    
    <main class="season">
    <h1>Season: <%= tv.data.season_number %></h1>
    <% if (tv.data.poster_path) { %>
        <img class="poster" src="https://www.themoviedb.org/t/p/w1280<%= tv.data.poster_path %>" />
    <% } else { %>
        <img alt="fallback-poster" src="/img/fallback-poster.png" />
    <% } %>
    <p><%= tv.data.overview %></p>
    <h2>Episodes</h2>
    <div class="grid-row">
        <% tv.data.episodes.forEach(function(episode) { %>
            <div class="card">
                <a href="/tv/<%= id %>/season/<%= tv.data.season_number %>/episode/<%= episode.episode_number %>">
                    <% if (episode.still_path) { %>
                        <img src="https://www.themoviedb.org/t/p/w1280<%= episode.still_path %>" />
                    <% } else { %>
                        <img src="/img/fallback-poster.png" />
                    <% } %>
                    <p><%= episode.name %></p>
                </a>
            </div>
            <% }); %>
            </div>
            <h3>Discover Recommendations for Another Show</h3>
            <form id="search-media" method="POST">
                <label for="searchbar">Search</label>
                <input id="search-bar" name="searchbar" type="search" required />
                <button id="search-tv" type="submit">Search</button>
            </form>
    </main>
    <footer>
        <%- include('../../partials/footer') %>
    </footer>
</body>
</html>