<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head') %>
    <title>TV Show: <%= tv.data.name %> - recTV</title>
  </head>
  <body>
    <header>
        <%- include('../../partials/navbar') %>
      
    </header>
    <main>
      <div>
        <% if (tv.data.poster_path) { %>
        <img
          alt=""
          class="poster-main"
          src="https://www.themoviedb.org/t/p/w1280<%= tv.data.poster_path %>"
        />
        <% } else { %>
        <img alt="" src="/img/fallback-poster.png" />
        <% } %>
      </div>

      <br />

      <div class="container">
        <h4><%= tv.data.name %></h4>
        <p><%= tv.data.overview %></p>
        <br />

        <h2>Seasons</h2>
        <div class="grid-row">
          <% tv.data.seasons.forEach(function(season) { %>
          <div class="card">
            <a href="/tv/<%= tv.data.id %>/season/<%= season.season_number %>">
              <% if (season.poster_path) { %>
              <img
                src="https://www.themoviedb.org/t/p/w1280<%= season.poster_path %>"
              />
              <% } else { %>
              <img src="/img/fallback-poster.png" />
              <% } %>
            </a>
          </div>
          <% }); %>
        </div>
        <br />
        <h2>People Who Liked <%= tv.data.name %> Also Liked</h2>
        <div class="grid-row">
          <% tv.data.recommendations.results.forEach(function(show) { %>
          <div class="card">
            <a href="/tv/<%= show.id %>">
              <% if (show.poster_path) { %>
              <img alt=""
                src="https://www.themoviedb.org/t/p/w1280<%= show.poster_path %>"
              />
              <% } else { %>
              <img alt="" src="/img/fallback-poster.png" />
              <% } %>
            </a>
          </div>
          <% }); %>
        </div>
        <br />
        <h2>People Who Disliked <%= tv.data.name %> Preferred Instead</h2>
        <div class="grid-row">
          <% dislikedRecommendations.forEach(function(show) { %>
          <div class="card">
            <a href="/tv/<%= show.id %>">
              <% if (show.poster_path) { %>
              <img alt=""
                src="https://www.themoviedb.org/t/p/w1280<%= show.poster_path %>"
              />
              <% } else { %>
              <img alt="" src="/img/fallback-poster.png" />
              <% } %>
            </a>
          </div>
          <% }); %>
        </div>
      </div>
    </main>
    <br />
    <footer><%- include('../../partials/footer') %></footer>
  </body>
</html>
